# Welcome to Sonic Pi
#Custom Song 2-27-23
#Kill Bill - SZA (edited)
sza_background ="C:/Users/jaylynn_wesley/Downloads/SZA_interview.wav"

use_synth :bass_foundation
use_bpm 89

x = :c5
m = :b5
u = :d5
w = :e5
h = :g5
y = :b4
n = :a4
a = :c20
b = :d8

live_loop :sza do
  sleep 4
  sample sza_background, amp: 2
  sync 1
end

define :bob do
  play x
  sleep 0.5
  play x
  sleep 0.5
end

live_loop :drum do
  sleep 8
  28.times do
    sample :drum_snare_soft, amp: 2
    sleep 1
  end
  stop
end

live_loop :kill do
  play a, amp: 20
  sleep 4
  play b, amp: 20
  sleep 4
  
  with_fx :distortion do
    play m
    sleep 1
    play h
    sleep 1
    play w
    sleep 1
    play x
    sleep 1
  end
  
  play n
  sleep 1
  play y
  sleep 1
  play x
  sleep 1
  play w
  sleep 1
  
  sleep 2
  
  1.times do
    bob
  end
  
  
  play x
  sleep 0.5
  play u
  sleep 0.25
  play w
  sleep 0.5
  play w
  sleep 0.25
  
  sleep 0.5
  
  play x
  sleep 0.25
  play y
  sleep 0.25
  play x
  sleep 0.25
  play y
  sleep 0.25
  
  1.times do
    bob
  end
  
  play x
  sleep 1
  play y
  sleep 0.25
  play n
  sleep 0.25
  play y
  sleep 0.5
  play y
  sleep 0.25
  
  sleep 0.5
  
  play x
  sleep 0.25
  play y
  sleep 0.25
  play n
  sleep 0.25
  play y
  sleep 0.25
end
